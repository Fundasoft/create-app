{
    "root": true,
    "env": {
        "es6": true,
        "node": true,
        "browser": true,
        "commonjs": true
    },
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "plugins": [
        "react"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    
    "rules": {
        "no-unused-vars": [
            "error",
            {
                "varsIgnorePattern": "^React$" // Ignore no-unused-vars only on React imports
            }
        ]
    }
}